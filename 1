#include <stdio.h>
#include <string.h>
void main()
{

  char a[100], b[100];
  int i,n,m,j;
  clrscr();
  printf("Enter some text\n");
  gets(a);
  printf("Enter a string to find\n");
  gets(b);
  m=strlen(b);
  n=strlen(a);
  for(i=0;i<=n-m;i++)
  {
    j=0;
    while(j<m && b[j]==a[i+j])
    {
    j=j+1;

    }
    if(j==m)
    {
      printf("SUBSTRING FOUND AT LOCATION %d\n",i+1);
      getch();
      exit();
       }

       }

	printf("SUBSTRING NOT FOUND\n");

      getch();
    }
